                                        @Html.ValidationMessageFor(model => model.MaTiecCuoi, "", new { @class = "text-danger" })
                                    </div>
                                </td>
                            </tr>
                            <tr>

                                <td class="form-group">
                                    <!-- Sửa label tại đây-->
                                    @Html.Label("Số bàn", htmlAttributes: new { @class = "control-label col-md-3" })
