@{
    ViewBag.Title = "Home Page";
    Layout = "~/Views/Shared/FrameLayout.cshtml";
}

<h1>ĐINH QUANG MINH</h1>
<h1>Checkbox or radio button</h1>
<div>
    <!-- Sửa label tại đây-->
    @Html.Label("Checkbox", htmlAttributes: new { @class = "control-label" })
    <div class="checkbox">
        <label><input type="checkbox" value="">Option 1</label>
    </div>
</div>
                    
<div class="form-group">
    <!-- Sửa label tại đây-->
    @Html.Label("Radio", htmlAttributes: new { @class = "control-label" })
    <div class="radio">
        <label><input type="radio" name="optradio">Option 1</label>
    </div>
</div>
